<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uw.singhh17.maraudersmap.UserDetailFragment">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_menu_send"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profileImg"
            android:text="Name"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            />

        <!--<TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Email@gmail.com"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/profileImg"
            />-->

        <TextView
            android:id="@+id/phoneNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:text="123-4567-8901"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/profileImg"
            />

        <Button
            android:id="@+id/sendTxtMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:text="Send Text Message"
            />

        <!--<Button
            android:id="@+id/sendEmailMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_above="@id/sendTxtMsg"
            android:text="Send E-mail Message"/>-->
    </RelativeLayout>

</FrameLayout>
